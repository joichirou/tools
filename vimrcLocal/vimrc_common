set number

" for mac
set backspace=indent,eol,start

" TABキーを押した際にタブ文字の代わりにスペース(4文字)を入れる
set expandtab
set tabstop=4
set shiftwidth=4

" key binding.
nnoremap <C-n> :tabnew<CR>
nnoremap <C-tab> gt
nnoremap <C-S-tab> gT

" TAB, spaceを可視化する
set list
set listchars=tab:>-,trail:-,extends:>,precedes:<,nbsp:%
